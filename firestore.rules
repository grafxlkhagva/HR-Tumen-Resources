
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    function isAdmin() {
      // Check for the existence of the document and the role field.
      return request.auth != null && exists(/databases/$(database)/documents/employees/$(request.auth.uid)) && get(/databases/$(database)/documents/employees/$(request.auth.uid)).data.role == 'admin';
    }

    // Admins have broad read access across the database.
    match /{path=**} {
      allow read, write: if isAdmin();
    }

    // Employees can read/write their own specific data.
    match /employees/{userId}/{document=**} {
      allow read, write: if isOwner(userId);
    }
    
    // Allow collectionGroup query for timeOffRequests by admin.
    // This rule must be separate and correctly scoped for collectionGroup queries.
    match /{path=**}/timeOffRequests/{requestId} {
      allow read, write: if isAdmin();
    }
    
    // Any authenticated user can read general documents.
    match /documents/{documentId} {
      allow read: if request.auth != null;
    }
    
    // All authenticated users can read from top-level collections needed for UI elements (e.g., dropdowns)
    match /departments/{deptId} {
      allow read: if request.auth != null;
    }
    match /positions/{posId} {
      allow read: if request.auth != null;
    }
     match /attendance/{attId} {
      allow read: if request.auth != null;
    }
  }
}

service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
