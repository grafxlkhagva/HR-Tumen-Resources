
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      // Security rules are not filters. This function only works if the
      // user has direct read access to their own employee document.
      // This is now enabled by the rule on /employees/{userId} below.
      return get(/databases/$(database)/documents/employees/$(request.auth.uid)).data.role == 'admin';
    }

    match /company/{doc=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /employees/{userId} {
      // ANY authenticated user can read/write their own document. This is crucial for isAdmin() to work.
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // An admin can also read any other employee's profile.
      allow read: if request.auth != null && isAdmin();
    }

    match /employees/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Admins can read any employee's subcollections
      allow read: if request.auth != null && isAdmin();
    }

    // Rules for the 'feedback' collection
    match /feedback/{feedbackId} {
      allow create: if request.auth != null;
      // Admins can read and update any single feedback document.
      allow read, update: if request.auth != null && isAdmin();

      // Users can only read their own non-anonymous feedback.
      allow read: if request.auth != null && resource.data.isAnonymous == false && request.auth.uid == resource.data.employeeId;
    }

    // This rule is crucial for allowing admins to list the entire collection.
    // It must come AFTER the more specific /feedback/{feedbackId} rule.
    match /feedback {
       allow list: if request.auth != null && isAdmin();
    }


    match /{path=**} {
        // Fallback for other collections.
        // For production, you should lock this down and define specific rules.
        allow read, write: if request.auth != null && isAdmin();
    }
  }
}
