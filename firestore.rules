
rules_version = '2';

// Helper function to check if a user is an admin
function isAdmin() {
  return exists(/databases/$(database)/documents/employees/$(request.auth.uid)) &&
         get(/databases/$(database)/documents/employees/$(request.auth.uid)).data.role == 'admin';
}

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow unauthenticated reads for company profile for login page styling.
    // Logged in users can write to it.
    match /company/profile {
      allow get: if true;
      allow write: if request.auth != null;
    }
    
    // Authenticated users can read and write to their own employee documents.
    match /employees/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Feedback Collection Rules
    match /feedback/{feedbackId} {
      // Any authenticated user can create feedback
      allow create: if request.auth != null;
      
      // Admins can read/update all feedback
      allow read, update: if isAdmin();
      
      // Employees can read their own non-anonymous feedback
      allow read: if request.auth.uid == resource.data.employeeId;
    }

    // Authenticated users can read and write to all other documents.
    // This rule is less specific and will not override the more specific rules above.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
