
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      // Security rules are not filters. This function only works if the
      // user has direct read access to their own employee document.
      return get(/databases/$(database)/documents/employees/$(request.auth.uid)).data.role == 'admin';
    }

    match /company/{doc=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /employees/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Admins can read any employee's profile
      allow read: if request.auth != null && isAdmin();
    }

    match /employees/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Admins can read any employee's subcollections
      allow read: if request.auth != null && isAdmin();
    }
    
    match /feedback/{feedbackId} {
      allow create: if request.auth != null;
      // Admins can read, list, and update feedback.
      allow read, update, list: if request.auth != null && isAdmin();
      // Users can only read their own non-anonymous feedback.
      allow read: if request.auth != null && resource.data.isAnonymous == false && request.auth.uid == resource.data.employeeId;
    }

    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
