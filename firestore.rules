
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow anyone to check if an admin exists, but only authenticated users to write.
    match /employees/{employeeId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow authenticated users to read/write to any subcollection under an employee
    match /employees/{employeeId}/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    match /company/profile {
      allow read, write: if request.auth != null;
    }

    // Allow read and write access to other documents for any signed-in user.
    match /{document=**} {
      // This rule will not apply to /employees/{employeeId} because a more specific rule exists above.
      allow read, write: if request.auth != null;
    }
  }
}

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files.
    match /{allPaths=**} {
      allow read: if true;
    }

    // Allow any authenticated user to write to the employee-photos directory.
    // The client-side logic should ensure files are placed in the correct user folder.
    match /employee-photos/{userId}/{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
