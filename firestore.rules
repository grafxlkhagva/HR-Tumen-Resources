
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return get(/databases/$(database)/documents/employees/$(request.auth.uid)).data.role == 'admin';
    }

    match /company/{doc=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /employees/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null && isAdmin();
    }

    match /employees/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null && isAdmin();
    }
    
    match /feedback/{feedbackId} {
      allow create: if request.auth != null;
      allow read, update, list: if request.auth != null && isAdmin();
      allow read: if request.auth != null && request.auth.uid == resource.data.employeeId;
    }

    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
