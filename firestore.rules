
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    function isAdmin() {
      // Check for the existence of the document and the role field.
      return request.auth != null && exists(/databases/$(database)/documents/employees/$(request.auth.uid)) && get(/databases/$(database)/documents/employees/$(request.auth.uid)).data.role == 'admin';
    }

    // Admins can read/write any document.
    match /{document=**} {
      allow read, write: if isAdmin();
    }

    // Specific rules for employees accessing their own data.
    match /employees/{userId}/{path=**} {
      allow read, write: if isOwner(userId);
    }
    
    // Allow any authenticated user to read documents in the 'documents' collection.
    // This allows employees to view general documents. Write is still restricted to admins by the rule above.
    match /documents/{documentId} {
      allow read: if request.auth != null;
    }

    // Rules for the collectionGroup query on 'timeOffRequests'.
    // Admins can list all requests. Employees can only list their own.
    match /employees/{userId}/timeOffRequests/{requestId} {
        allow read, write: if isOwner(userId) || isAdmin();
    }
  }
}

service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
