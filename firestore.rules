rules_version = '2';
// Teal HR — Firestore аюулгүй байдлын дүрмүүд.
// Roles болон collection-уудын эрхийн тайлбар: docs/FIRESTORE_ROLES.md

service cloud.firestore {
  match /databases/{database}/documents {

    // ─── Туслах функцууд ─────────────────────────────────────────────────
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isSignedIn() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isSignedIn() && 
             exists(/databases/$(database)/documents/employees/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/employees/$(request.auth.uid)).data.get('role', 'employee') == 'admin';
    }

    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // Анхны админ бүртгэх: signup нээлттэй үед employees тоолох боломжтой
    // Документ: system/signup_config { open: true|false }
    match /system/signup_config {
      allow read: if true;
      allow create: if !exists(/databases/$(database)/documents/system/signup_config);
      allow update, delete: if isAdmin();
    }

    // employees: нэвтэрсэн эсвэл signup нээлттэй үед унших (анхны админ шалгах).
    // Консолд "Error loading documents" гарах нь хэвийн: консол request.auth илгээдэггүй тул isSignedIn()=false.
    // Дэлгэрэнгүй: docs/FIRESTORE_ROLES.md хэсэг 5.
    match /employees/{employeeId} {
      allow read: if isSignedIn() ||
        (exists(/databases/$(database)/documents/system/signup_config) &&
         get(/databases/$(database)/documents/system/signup_config).data.get('open', false) == true);
      allow create: if isSignedIn();
      // Owners can update their profile, but cannot change privileged fields.
      allow update: if isAdmin() || (
        isOwner(employeeId) &&
        !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'questionnaireLocked'])
      );
    }
    
    // Questionnaire subcollection: employees can write only when not locked.
    match /employees/{employeeId}/questionnaire/{docId} {
      allow read: if isOwner(employeeId) || isAdmin();
      allow create, update, delete: if isAdmin() || (isOwner(employeeId) &&
        !get(/databases/$(database)/documents/employees/$(employeeId)).data.get('questionnaireLocked', false)
      );
    }

    // Subcollections of employees
    match /employees/{employeeId}/{subcollection}/{docId} {
       allow read: if isOwner(employeeId) || isAdmin();
       // Avoid over-broad writes for sensitive subcollections that have their own rules.
       allow write: if (isOwner(employeeId) || isAdmin()) &&
         !(subcollection in ['questionnaire', 'vacationRequests']);
    }

    // Onboarding / Offboarding процессууд
    match /onboarding_processes/{processId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    match /{path=**}/offboarding_processes/{docId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /employees/{employeeId}/point_profile/{docId} {
       allow read, write: if isSignedIn();
    }

    // Allow mentors/buddies to update assigned programs (e.g. mark tasks as done)
    match /employees/{employeeId}/assignedPrograms/{programId} {
      allow read: if isSignedIn();
      allow create, delete: if isAdmin();
      allow update: if isSignedIn();
    }

    // --- Points & Social System Rules ---
    match /recognition_posts/{postId} {
      allow read, create: if isSignedIn();
      allow update: if isSignedIn() && (
        isAdmin() || 
        request.auth.uid == (resource.data.fromUserId) ||
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['reactions'])
      );
      allow delete: if isAdmin() || (isSignedIn() && request.auth.uid == (resource.data.fromUserId));
    }

    match /posts/{postId} {
      allow read: if isSignedIn();
      allow create, delete: if isAdmin();
      allow update: if isAdmin() || 
                    (isSignedIn() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['reactions']));
    }

    match /points_config/{docId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /point_transactions/{txId} {
      allow read: if isSignedIn() && (isAdmin() || request.auth.uid == resource.data.userId);
      allow create: if isSignedIn();
    }

    match /rewards/{rewardId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /redemption_requests/{requestId} {
      allow read: if isSignedIn() && (isAdmin() || request.auth.uid == resource.data.userId);
      allow create: if isSignedIn();
      allow update: if isAdmin();
    }

    match /budget_point_requests/{requestId} {
      allow create: if isSignedIn();
      allow read, update, delete: if isSignedIn() && (isAdmin() || request.auth.uid == resource.data.fromUserId);
    }



    // Vacation requests rules
    match /employees/{employeeId}/vacationRequests/{requestId} {
      allow read: if isSignedIn();
      // Employee creates their own request (pending).
      allow create: if isOwner(employeeId) &&
        request.resource.data.employeeId == employeeId &&
        request.resource.data.status == 'PENDING';

      // Update rules:
      // - Admin: any
      // - Owner: cancel only (PENDING -> CANCELLED)
      // - Approver: approve/reject/return-to-pending with limited fields
      allow update: if isAdmin() ||
        (
          isOwner(employeeId) &&
          resource.data.status == 'PENDING' &&
          request.resource.data.status == 'CANCELLED' &&
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'decisionAt', 'updatedAt'])
        ) ||
        (
          isSignedIn() &&
          request.auth.uid == resource.data.approverId &&
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'decisionAt', 'approvedAt', 'rejectionReason', 'updatedAt']) &&
          (
            // Approve
            (request.resource.data.status == 'APPROVED' &&
              request.resource.data.decisionAt is string &&
              request.resource.data.approvedAt is string &&
              (
                !request.resource.data.keys().hasAny(['rejectionReason']) ||
                request.resource.data.rejectionReason == null
              )
            )
            ||
            // Reject (reason required)
            (request.resource.data.status == 'REJECTED' &&
              request.resource.data.decisionAt is string &&
              request.resource.data.approvedAt is string &&
              request.resource.data.rejectionReason is string &&
              request.resource.data.rejectionReason.size() > 0
            )
            ||
            // Return to pending (clear decision fields)
            (request.resource.data.status == 'PENDING' &&
              (request.resource.data.decisionAt == null) &&
              (request.resource.data.approvedAt == null) &&
              (request.resource.data.rejectionReason == null)
            )
          )
        );

      // Delete: admin only (use cancel instead of delete)
      allow delete: if isAdmin();
    }
    
    // Company profile and branding settings
    match /company/{allPaths=**} {
      allow read: if isSignedIn() || true;
      allow write: if isAdmin();
    }

    // Company-wide policies can be read by any signed-in user, but only managed by admins.
    match /companyPolicies/{policyId} {
        allow read: if isSignedIn();
        allow write: if isAdmin();
    }

    // Reference data (collections ending with 'Types', 'Levels', 'Statuses', etc.) is readable by any signed-in user
    // Writable only by admins
    match /{refCollection}/{docId} {
       allow read: if isSignedIn();
       allow write: if isAdmin();
    }

    // All users can read departments, positions, and company info
    match /departments/{departmentId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    match /positions/{positionId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }


    // Onboarding program templates are managed by admins
    match /onboardingPrograms/{programId}/{document=**} {
       allow read: if isSignedIn();
       allow write: if isAdmin();
    }

    match /newHires/{hireId} {
      allow read, write: if isAdmin();
    }

    // Байгууллагын үйлдлүүд (organization actions)
    match /organization_actions/{actionId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // Тохиргоо (settings/onboarding гэх мэт)
    match /settings/{docId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // Компанийн түүхэн үйл явдлууд
    match /companyHistory/{eventId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // company_profile (хэрэв тусгаар collection ашигласан бол)
    match /company_profile/{docId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // Attendance records can be created by the user, but likely only read by admins or managers
    match /attendance/{attendanceId} {
      allow create: if isOwner(request.resource.data.employeeId);
      allow read, update: if isAdmin();
    }

    // The following comment is a special instruction for the backend to create an index.
    // Please do not modify or remove it.
    // FIRESTORE_INDEX: COLLECTION_GROUP(timeOffRequests) ASC(status)

    // Collection Group rules
    match /{path=**}/assignedPrograms/{docId} {
        allow read: if isSignedIn();
        allow write: if isAdmin();
    }

    match /{path=**}/timeOffRequests/{docId} {
        allow read: if isSignedIn();
        allow write: if isAdmin();
    }

    match /{path=**}/vacationRequests/{docId} {
        allow read: if isSignedIn();

        // Create: owner creates pending request
        allow create: if isSignedIn() &&
          request.auth.uid == request.resource.data.employeeId &&
          request.resource.data.status == 'PENDING';

        // Update: mirror `employees/{employeeId}/vacationRequests/{requestId}`
        allow update: if isAdmin() ||
          (
            isSignedIn() &&
            request.auth.uid == resource.data.employeeId &&
            resource.data.status == 'PENDING' &&
            request.resource.data.status == 'CANCELLED' &&
            request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'decisionAt', 'updatedAt'])
          ) ||
          (
            isSignedIn() &&
            request.auth.uid == resource.data.approverId &&
            request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'decisionAt', 'approvedAt', 'rejectionReason', 'updatedAt']) &&
            (
              (request.resource.data.status == 'APPROVED' &&
                request.resource.data.decisionAt is string &&
                request.resource.data.approvedAt is string &&
                (
                  !request.resource.data.keys().hasAny(['rejectionReason']) ||
                  request.resource.data.rejectionReason == null
                )
              )
              ||
              (request.resource.data.status == 'REJECTED' &&
                request.resource.data.decisionAt is string &&
                request.resource.data.approvedAt is string &&
                request.resource.data.rejectionReason is string &&
                request.resource.data.rejectionReason.size() > 0
              )
              ||
              (request.resource.data.status == 'PENDING' &&
                (request.resource.data.decisionAt == null) &&
                (request.resource.data.approvedAt == null) &&
                (request.resource.data.rejectionReason == null)
              )
            )
          );

        allow delete: if isAdmin();
    }
    
    
    // --- Employment Relations Module Rules ---
    
    // Document Types - Admin only
    match /er_document_types/{typeId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    // Templates - Admin only for write, all signed-in users can read active templates
    match /er_templates/{templateId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    match /er_workflows/{workflowId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // ER процессын баримтын төрлүүд (employment-relations settings)
    match /er_process_document_types/{typeId} {
      allow read: if isSignedIn();
      // Admins manage settings. Signed-in users may only bump the numbering counter
      // in a tightly validated way (so document creation can allocate numbers).
      allow create, delete: if isAdmin();
      allow update: if isAdmin() || (isSignedIn() && (
        // Only allow updating counter-related fields
        request.resource.data.diff(resource.data).affectedKeys().hasOnly([
          'currentNumber',
          'lastNumberYear',
          'lastNumberMonth',
          'lastNumberDay',
          'updatedAt'
        ]) &&
        // Ensure numeric fields are numbers
        (request.resource.data.currentNumber is int || request.resource.data.currentNumber is number) &&
        (request.resource.data.lastNumberYear is int || request.resource.data.lastNumberYear is number) &&
        (request.resource.data.lastNumberMonth is int || request.resource.data.lastNumberMonth is number) &&
        (request.resource.data.lastNumberDay is int || request.resource.data.lastNumberDay is number) &&
        // Ensure date parts match request.time
        request.resource.data.lastNumberYear == request.time.year &&
        request.resource.data.lastNumberMonth == request.time.month &&
        request.resource.data.lastNumberDay == request.time.day &&
        // Ensure counter increments by 1 OR resets to startNumber based on resetPeriod
        (
          // Increment path
          request.resource.data.currentNumber == (resource.data.currentNumber + 1)
          ||
          // Reset path (yearly/monthly/daily) to startNumber
          (
            request.resource.data.currentNumber ==
              (resource.data.numberingConfig.startNumber is int ? resource.data.numberingConfig.startNumber : 1)
            &&
            (
              resource.data.numberingConfig.resetPeriod == 'yearly' && resource.data.lastNumberYear != request.time.year
              ||
              resource.data.numberingConfig.resetPeriod == 'monthly' && (
                resource.data.lastNumberYear != request.time.year || resource.data.lastNumberMonth != request.time.month
              )
              ||
              resource.data.numberingConfig.resetPeriod == 'daily' && (
                resource.data.lastNumberYear != request.time.year ||
                resource.data.lastNumberMonth != request.time.month ||
                resource.data.lastNumberDay != request.time.day
              )
            )
          )
        )
      ));
    }

    // Documents - Complex rules based on status and role
    match /er_documents/{documentId} {
      // Read access:
      // - Creator can always read their own documents
      // - Reviewers can read documents they need to review
      // - Admins can read all
      allow read: if isSignedIn() && (
        isAdmin() ||
        request.auth.uid == resource.data.creatorId ||
        request.auth.uid == resource.data.employeeId ||
        request.auth.uid in resource.data.get('reviewers', []) ||
        (exists(/databases/$(database)/documents/employees/$(request.auth.uid)) &&
         get(/databases/$(database)/documents/employees/$(request.auth.uid)).data.get('positionId', '') in resource.data.get('reviewers', []))
      );
      
      // Create: Any signed-in user can create documents
      allow create: if isSignedIn();
      
      // Update access:
      // - Creator can update their own DRAFT documents
      // - Reviewers can update approvalStatus when document is IN_REVIEW
      // - Creator can finalize approval when status is REVIEWED
      // - Admins can update anything
      allow update: if isSignedIn() && (
        isAdmin() ||
        // Creator updating their own draft
        (request.auth.uid == resource.data.creatorId && resource.data.status == 'DRAFT') ||
        // Creator finalizing approval when all reviewers approved
        (request.auth.uid == resource.data.creatorId && resource.data.status == 'REVIEWED' &&
         request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'updatedAt'])) ||
        // Admin/reviewer/creator sending SIGNED doc to employee for acknowledgement
        (
          resource.data.status in ['SIGNED', 'APPROVED'] &&
          request.resource.data.status == 'SENT_TO_EMPLOYEE' &&
          (
            request.auth.uid == resource.data.creatorId ||
            request.auth.uid in resource.data.get('reviewers', []) ||
            (exists(/databases/$(database)/documents/employees/$(request.auth.uid)) &&
              get(/databases/$(database)/documents/employees/$(request.auth.uid)).data.get('positionId', '') in resource.data.get('reviewers', [])
            )
          ) &&
          request.resource.data.diff(resource.data).affectedKeys().hasOnly([
            'status',
            'employeeAckRequired',
            'employeeAckSentAt',
            'employeeAckSentBy',
            'updatedAt'
          ]) &&
          (request.resource.data.employeeAckRequired is bool) &&
          (request.resource.data.employeeAckSentAt is timestamp) &&
          (request.resource.data.employeeAckSentBy is string || request.resource.data.employeeAckSentBy == null)
        ) ||
        // Employee acknowledging SENT_TO_EMPLOYEE doc
        (
          resource.data.status == 'SENT_TO_EMPLOYEE' &&
          request.auth.uid == resource.data.employeeId &&
          request.resource.data.status == 'ACKNOWLEDGED' &&
          request.resource.data.diff(resource.data).affectedKeys().hasOnly([
            'status',
            'employeeAckAt',
            'employeeAckBy',
            'updatedAt'
          ]) &&
          (request.resource.data.employeeAckAt is timestamp) &&
          (request.resource.data.employeeAckBy == request.auth.uid)
        ) ||
        // Reviewer updating approval status
        (resource.data.status == 'IN_REVIEW' && 
         (request.auth.uid in resource.data.get('reviewers', []) ||
          (exists(/databases/$(database)/documents/employees/$(request.auth.uid)) &&
           get(/databases/$(database)/documents/employees/$(request.auth.uid)).data.get('positionId', '') in resource.data.get('reviewers', []))) &&
         // Only allow updating specific fields
         request.resource.data.diff(resource.data).affectedKeys().hasOnly(['approvalStatus', 'status', 'updatedAt', 'rejectionReason']))
      );
      
      // Delete: Only creator can delete their own drafts, or admins
      allow delete: if isSignedIn() && (
        isAdmin() ||
        (request.auth.uid == resource.data.creatorId && resource.data.status == 'DRAFT')
      );
      // Activity Subcollection for Real-time History
      match /activity/{activityId} {
        // Read: Same as parent document (reviewers, creator, admin)
        allow read: if isSignedIn() && (
            isAdmin() ||
            request.auth.uid == get(/databases/$(database)/documents/er_documents/$(documentId)).data.creatorId ||
            request.auth.uid == get(/databases/$(database)/documents/er_documents/$(documentId)).data.employeeId ||
            request.auth.uid in get(/databases/$(database)/documents/er_documents/$(documentId)).data.reviewers ||
            (exists(/databases/$(database)/documents/employees/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/employees/$(request.auth.uid)).data.get('positionId', '') in get(/databases/$(database)/documents/er_documents/$(documentId)).data.reviewers)
        );

        // Create: Reviewers, Creator, and target Employee (ack) can add logs
        allow create: if isSignedIn() && (
            isAdmin() ||
            request.auth.uid == get(/databases/$(database)/documents/er_documents/$(documentId)).data.creatorId ||
            request.auth.uid in get(/databases/$(database)/documents/er_documents/$(documentId)).data.reviewers ||
            (exists(/databases/$(database)/documents/employees/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/employees/$(request.auth.uid)).data.get('positionId', '') in get(/databases/$(database)/documents/er_documents/$(documentId)).data.reviewers)
            ||
            (
              request.auth.uid == get(/databases/$(database)/documents/er_documents/$(documentId)).data.employeeId &&
              request.resource.data.keys().hasOnly(['type', 'actorId', 'content', 'createdAt']) &&
              request.resource.data.type == 'STATUS_CHANGE' &&
              request.resource.data.actorId == request.auth.uid
            )
        );
      }
    }
    
    // --- Recruitment Module Rules ---
    
    match /vacancies/{vacancyId} {
        allow read: if true; // Public read for job board (or use a cloud function for public access to be safer)
        allow write: if isAdmin();
    }
    
    match /candidates/{candidateId} {
        allow create: if true; // Public application submission
        allow read, update, delete: if isAdmin();
    }
    
    match /applications/{applicationId} {
        allow create: if true; // Public application submission
        allow read, update, delete: if isAdmin();
    }
    
    match /interviews/{interviewId} {
        allow read: if isSignedIn();
        allow write: if isAdmin();
    }

    // --- Projects Module Rules ---
    
    // Projects - All signed-in users can read projects, admins can write
    // Project owners and assigned employees can also update
    match /projects/{projectId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn();
        allow update: if isSignedIn() && (
            isAdmin() ||
            request.auth.uid == resource.data.ownerId ||
            request.auth.uid == resource.data.createdBy
        );
        allow delete: if isAdmin() || (isSignedIn() && request.auth.uid == resource.data.createdBy);
    }
    
    // Tasks subcollection under projects
    match /projects/{projectId}/tasks/{taskId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn();
        allow update: if isSignedIn() && (
            isAdmin() ||
            request.auth.uid == resource.data.ownerId ||
            request.auth.uid in resource.data.get('assigneeIds', [])
        );
        allow delete: if isAdmin() || (isSignedIn() && request.auth.uid == resource.data.ownerId);
    }

    // Messages subcollection under projects (Project Chat)
    match /projects/{projectId}/messages/{messageId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn();
        allow update: if isSignedIn() && request.auth.uid == resource.data.senderId;
        allow delete: if isAdmin() || (isSignedIn() && request.auth.uid == resource.data.senderId);
    }
    
    // Collection Group rules for tasks (for dashboard queries)
    match /{path=**}/tasks/{taskId} {
        allow read: if isSignedIn();
    }

  }
}
