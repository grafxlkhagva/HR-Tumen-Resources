
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // This rule specifically allows collection group queries on 'timeOffRequests'
    // for any authenticated user. This is necessary for the "Requests" tab to work.
    match /{path=**}/timeOffRequests/{requestId} {
      allow read, write: if request.auth != null;
    }
    
    // This is a fallback rule to allow access to any other document
    // for any authenticated user. This keeps development simple.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
