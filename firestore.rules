/**
 * WARNING: These rules are intentionally insecure for development purposes.
 * DO NOT use these rules in a production environment.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow anyone to check if an admin exists, but only authenticated users to write.
    match /employees/{employeeId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow authenticated users to read/write to any subcollection under an employee
    match /employees/{employeeId}/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    match /company/profile {
      allow read, write: if request.auth != null;
    }

    // Allow read and write access to other documents for any signed-in user.
    match /{document=**} {
      // This rule will not apply to /employees/{employeeId} because a more specific rule exists above.
      allow read, write: if request.auth != null;
    }
  }
}
