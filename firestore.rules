
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      // Security rules are not filters. This function only works if the
      // user has direct read access to their own employee document.
      // This is now enabled by the rule on /employees/{userId} below.
      return get(/databases/$(database)/documents/employees/$(request.auth.uid)).data.role == 'admin';
    }

    match /company/{doc=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && isAdmin();
    }

    match /employees/{userId} {
      // ANY authenticated user can read/write their own document. This is crucial for isAdmin() to work.
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // An admin can also read any other employee's profile.
      allow read: if request.auth != null && isAdmin();
    }

    match /employees/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Admins can read any employee's subcollections
      allow read: if request.auth != null && isAdmin();
    }

    // Rules for the 'feedback' collection
    match /feedback/{feedbackId} {
      allow create: if request.auth != null;
      // Admins can update any single feedback document.
      allow update: if request.auth != null && isAdmin();
      // Users can read a feedback if they are an admin or the owner.
      allow read: if request.auth != null && (isAdmin() || request.auth.uid == resource.data.employeeId);
    }
    
    // Admins can list all feedback.
    // Employees can list feedback only when querying by their own employeeId.
    match /feedback {
       allow list: if request.auth != null && (isAdmin() || request.query.where.employeeId == request.auth.uid);
    }
    
    match /posts/{postId} {
        allow read: if request.auth != null;
    }

    match /posts {
        allow list: if request.auth != null;
    }
    
    // Any authenticated user can read reference data for questionnaires
    match /questionnaire{collection}/{docId} {
        allow read: if request.auth != null;
    }

    match /{path=**} {
        // Fallback for other collections.
        // For production, you should lock this down and define specific rules.
        allow read, write: if request.auth != null && isAdmin();
    }
  }
}
