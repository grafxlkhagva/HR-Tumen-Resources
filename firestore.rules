
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read and write access to any document for any authenticated user.
    // This is a simple rule for initial development.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}

service firebase.storage {
  match /b/{bucket}/o {
    // Allow read and write access to any file for any authenticated user.
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
